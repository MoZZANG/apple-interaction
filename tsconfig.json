{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "typeRoots": ["./typings"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
